<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    android:weightSum="10"
    tools:context="com.example.shivam.kisanneeti.TimelineActivity">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mandi_prices_background"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:text="City      "
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="40sp" />

        <Spinner
            android:id="@+id/city_set"
            android:layout_width="200dp"
            android:layout_height="40sp"
            android:paddingStart="5dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:entries="@array/City">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:text="Mandi   "
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="40sp" />

        <Spinner
            android:id="@+id/mandi_set"
            android:layout_width="200dp"
            android:layout_height="40sp"
            android:textColor="#000"
            android:paddingStart="5dp"
            android:textSize="15sp">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:text="Crop     "
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="40sp" />

        <Spinner
            android:id="@+id/crop_set"
            android:layout_width="200dp"
            android:layout_height="40sp"
            android:textColor="#000"
            android:paddingStart="5dp"
            android:textSize="15sp"
            android:entries="@array/Crops">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/pricetxt"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
